{{!-- Header space for easier readability --}}


{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}

<div class="container-fluid">

<h1 class="title col-sm-12 mt-5">Task Manager</h1>

<hr>

<!-- row enclosing all three columns -->
<div class="row col-sm-12 d-flex justify-content-center"> 

  <div class="row to-do col-sm-4">
  <h2 class="heading border-bottom border-muted mt-5">To-Do</h2>

    <ol>
      {{#each tasks}}
        {{#unless completed}}
          {{> tasks/task-block completed=true}}
        {{/unless}}
      {{/each}}
    </ol>
  </div> <!-- end to-do column -->

  <div class="row add col-sm-4 d-inline-block h-25 pb-3 pt-3">

    <form class="create-form" action="/" method="POST">

      <div class="form-group">
        <label for="task" class="font-weight-bold text-justify pt-1 pb-2 text-uppercase"><h5>Add a new task to your To-Do list:</h5></label>
        <input type="text" id="task" name="newTask">
      </div>

      <button type="submit">Add Task</button>
    </form>
  </div> <!-- end add-a-task column -->

  <div class="row done col-sm-4">
  <h2 class="heading border-bottom border-muted mt-5">Done</h2>

  <ol>
    {{#each tasks}}
      {{#if completed}}
        {{> tasks/task-block completed=false}}
      {{/if}}
    {{/each}}
  </ol>
  </div> <!-- end done column -->


</div> <!-- end row -->
</div> <!-- end container -->
